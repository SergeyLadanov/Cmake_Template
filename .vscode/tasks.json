{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: Сборка проекта",
            "command": "",
            "args": [
                "cmake",
                "--build",
                "--preset",
                "Debug",
                "-j4"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Компилятор: \"g++.exe\""
        },
        {
            "type": "shell",
            "label": "Конфигурация Debug",
            "command": "",
            "args": [
                "cmake",
                "--preset",
                "Debug"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Компилятор: \"g++.exe\""
        },
        {
            "type": "shell",
            "label": "Конфигурация Release",
            "command": "",
            "args": [
                "cmake",
                "--preset",
                "Release",
            ],

            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Компилятор: \"g++.exe\""
        },
		{
			"type": "cmake",
			"label": "Clean",
			"command": "build",
			"targets": [
				"clean"
			],
			"preset": "${command:cmake.activeBuildPresetName}",
			"group": {
				"kind": "build",
			},
			"problemMatcher": [],
			"detail": "CMake template build task",
		},
    ]
}



