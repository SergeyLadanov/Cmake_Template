{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: Сборка проекта",
            "command": "",
            "args": [
                "cmake",
                "--build",
                "--preset",
                "Debug",
                "-j4"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Компилятор: \"g++.exe\""
        },
        {
            "type": "shell",
            "label": "Конфигурация Debug",
            "command": "",
            "windows":{
                "args": [
                    "cmake",
                    "--preset",
                    "Debug"
                ],
            },

            "linux":{
                "args": [
                    "cmake",
                    "--preset",
                    "Debug"
                ],
            },

            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Компилятор: \"g++.exe\""
        },
        {
            "type": "shell",
            "label": "Конфигурация Release",
            "command": "",
            "windows":{
                "args": [
                    "cmake",
                    "--preset",
                    "Release",
                ],
            },

            "linux":{
                "args": [
                    "cmake",
                    "--preset",
                    "Release",
                ],
            },

            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Компилятор: \"g++.exe\""
        },
        {
            "type": "shell",
            "label": "C/C++: Clean",
            "command": "",
            "args": [
                "cmake",
                "--build",
                "--preset",
                "Debug",
                "--target",
                "clean"

            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Очистка выходных файлов"
        }
    ]
}